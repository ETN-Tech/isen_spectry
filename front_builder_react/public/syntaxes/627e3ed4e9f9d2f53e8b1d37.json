{
    "root": {
        "type": "object",
        "values": [
            "screen"
        ]
    },
    "style": {
        "type": "object",
        "values": [
            "?name",
            "?color",
            "?align",
            "?textBold",
            "?textDecoration",
            "?borders",
            "?borderRadius"
        ]
    },
    "block": {
        "type": "object",
        "values": [
            "?name",
            "?style",
            "?content"
        ]
    },
    "link": {
        "type": "object",
        "values": [
            "targetValue",
            "?external",
            "?name",
            "content",
            "?style"
        ]
    },
    "text": {
        "type": "object",
        "values": [
            "?style",
            "textValue"
        ]
    },
    "title": {
        "type": "object",
        "values": [
            "?style",
            "textValue"
        ]
    },
    "button": {
        "type": "object",
        "values": [
            "?style",
            "textValue"
        ]
    },
    "screen": {
        "type": "array",
        "values": [
            "name",
            "?defaultPage",
            "?style",
            "?content"
        ]
    },
    "content": {
        "type": "array",
        "values": [
            "?block",
            "?title",
            "?text",
            "?button",
            "?link",
            "?numberValue"
        ]
    },

    "name": {
        "type": "field",
        "field": "inputText"
    },
    "defaultPage": {
        "type": "field",
        "field": "inputHome"
    },
    "targetValue": {
        "type": "field",
        "field": "inputText"
    },
    "textValue": {
        "type": "field",
        "field": "inputText"
    },
    "numberValue": {
        "type": "field",
        "field": "inputNumber"
    },
    "external": {
        "type": "field",
        "field": "inputOnOff"
    },
    "color": {
        "type": "field",
        "field": "inputColor"
    },
    "align": {
        "type": "field",
        "field": "selectAlign"
    },
    "textDecoration": {
        "type": "field",
        "field": "selectDecoration"
    },
    "textBold": {
        "type": "field",
        "field": "inputOnOff"
    },
    "borders": {
        "type": "field",
        "field": "inputColor"
    },
    "borderRadius": {
        "type": "field",
        "field": "inputNumber"
    },

    "inputHome": {
        "type": "input",
        "nature": "radio",
        "global": "true"
    },
    "inputText": {
        "type": "input",
        "nature": "text"
    },
    "inputNumber": {
        "type": "input",
        "nature": "number"
    },
    "inputOnOff": {
        "type": "input",
        "nature": "checkbox"
    },
    "inputColor": {
        "type": "input",
        "nature": "color"
    },

    "selectAlign": {
        "type": "select",
        "values": [
            "center",
            "right",
            "left",
            "top",
            "bottom"
        ]
    },
    "selectDecoration": {
        "type": "select",
        "values": [
            "none",
            "underline",
            "italic"
        ]
    }
}
